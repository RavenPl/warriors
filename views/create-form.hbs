<form style="text-align: center" action="/warrior/add" method="POST">

    <div class="row">
        <label for="name">Name</label>
        <input type="text" placeholder="Write a name..." id="name" name="name" required>
    </div>
    <div class="row">
        <label for="healPoints">Heal Points</label>
        <input type="number" value=1 min="1" step="1" id="healPoints" name="healPoints">
    </div>
    <div class="row">
        <label for="strength">Strength</label>
        <input type="number" value=1 min="1" step="1" id="strength" name="strength">
    </div>
    <div class="row">
        <label for="defence">Defence</label>
        <input type="number" value=1 min="1" step="1" id="defence" name="defence">
    </div>
    <div class="row">
        <label for="agility">Agility</label>
        <input type="number" value=1 min="1" step="1" id="agility" name="agility">
    </div>
    <input class="button-primary" type="submit" value="Submit">
    <input class="button-primary" type="reset" value="Clear">

</form>

